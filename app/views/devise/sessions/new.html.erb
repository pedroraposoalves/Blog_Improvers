<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

	<div class="form-group">
    	<label for="InputEmail">Email</label>
    	<%= f.email_field :email, :class => "form-control", :placeholder => "Insira o seu email", :autofocus => true %>
    </div>
    
    <div class="form-group">
      <label for="InputPassword">Password</label>
      <%= f.password_field :password, :class => "form-control", :placeholder => "Insira a password" %>
  	</div>

  <div><%= f.submit "Entrar", class: 'btn btn-primary' %></div>
<% end %>
